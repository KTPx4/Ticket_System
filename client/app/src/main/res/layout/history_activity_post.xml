<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".history.PostActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp">

        <LinearLayout
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Rating Bar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating:"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:rating="1"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/ratingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: 1"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Comment Input -->
            <EditText
                android:id="@+id/commentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write your comment (optional)"
                android:minHeight="100dp"
                android:gravity="top"
                android:maxLength="200"
                android:background="@android:drawable/editbox_background_normal"
                android:layout_marginBottom="16dp" />

            <!-- File Upload Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Images/Videos (Max: 5)"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnUploadFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Files" />

            <TextView
                android:id="@+id/fileCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Files selected: 0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />
            <!-- RecyclerView to display selected files -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFiles"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="16dp" />
            <!-- Submit Button -->

        </LinearLayout>
    </ScrollView>
    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />
</androidx.constraintlayout.widget.ConstraintLayout>